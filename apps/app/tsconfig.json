{
  "extends": "@motion-metrics/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "environment.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "../../node_modules/@clarity-digital/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
